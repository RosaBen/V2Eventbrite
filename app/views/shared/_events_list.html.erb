<div>
  <% events.each do |event| %>
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-dark"><%=event.title%></h5>
            <p class="card-text"><span class=" text-primary">Description:</span> <%= truncate(event.description, length: 20, separator: '...') %></p>
            <hr>
<br>
            <p class="text-muted mb-1">
           🧑 Evenement créé par <strong>
<% if event.user %>
  <%= event.user.fullname %>
<% else %>
  Inconnu
<% end %>
</strong>
              <br>
              🕒 date de l'evenement : <strong><%= french_date_format(event) %></strong>
              <br>
🏠 Lieu : <strong>
  <% if event.location.present? %>
    <%= event.location %>
  <% else %>
    TBC
  <% end %>
</strong>
<br>
<p><strong>Participants :</strong> <%= pluralize(event.attendances.count, "participant") %></p>
<br>
💰 Tarif : <strong><%= event.price %> €</strong>
<br>
⌛ Durée : <strong><%= min_to_hour(event.duration)  %></strong>
            </p>
            <%= link_to "Lire plus", event_path(event), class: "btn btn-outline-primary mt-2" %>
        </div>
    </div>
  <% end %>
</div>