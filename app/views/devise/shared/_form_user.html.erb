<div class="row g-3">
  <div class="col-md-6">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control", autocomplete: "first_name" %>
  </div>
  <div class="col-md-6">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control", autocomplete: "last_name" %>
  </div>
  <div class="col-12">
    <%= f.label :description, "Bio" %>
    <%= f.text_area :description, class: "form-control", rows: 3 %>
  </div>
  <div class="col-12">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
  </div>
</div>
